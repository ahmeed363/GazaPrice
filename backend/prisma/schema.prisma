generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        String   @id @default(uuid())
  name      String
  city      String
  district  String?
  latitude  Float?
  longitude Float?
  prices    PriceRecord[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  category    String?
  brand       String?
  defaultUnit String?  @default("piece")
  aliases     ProductAlias[]
  prices      PriceRecord[]
  submissions PriceSubmission[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProductAlias {
  id        String   @id @default(uuid())
  alias     String   @unique
  product   Product  @relation(fields: [productId], references: [id])
  productId String
}

model PriceRecord {
  id         String   @id @default(uuid())
  product    Product  @relation(fields: [productId], references: [id])
  productId  String
  store      Store    @relation(fields: [storeId], references: [id])
  storeId    String
  price      Float
  unit       String
  size       Float?
  isAnomaly  Boolean  @default(false)
  trustScore Float    @default(1.0)
  updatedAt  DateTime @updatedAt
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String?
  trustScore  Float    @default(0.0)
  submissions PriceSubmission[]
  createdAt   DateTime @default(now())
}

model PriceSubmission {
  id        String   @id @default(uuid())
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  price     Float
  storeName String
  location  String?
  status    SubmissionStatus @default(PENDING)
  evidence  SubmissionEvidence[]
  createdAt DateTime @default(now())
}

model SubmissionEvidence {
  id           String   @id @default(uuid())
  submission   PriceSubmission @relation(fields: [submissionId], references: [id])
  submissionId String
  url          String
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}
